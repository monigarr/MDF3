<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:background="#E7D9B4" >
      

    <TextView
		android:id="@+id/message"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="3dip"
		android:layout_marginBottom="3dip"
		android:layout_marginLeft="3dip"
		android:layout_marginRight="3dip"
		android:layout_centerHorizontal="true"
		android:textColor="#092B5A"
		android:padding="3dp"
		android:textSize="13sp" />
    
    <TextView
		android:id="@+id/searchview"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#092B5A"
		android:padding="3dp"
		android:textSize="13sp"
		android:layout_below="@+id/message" />
    
	<ImageView
		android:id="@+id/item_image"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginTop="3dip"
		android:layout_marginBottom="3dip"
		android:layout_marginLeft="3dip"
		android:layout_marginRight="3dip"
		android:layout_centerHorizontal="true"
		android:src="@drawable/ic_launcher"
		android:layout_below="@+id/searchview" />

	<TextView
		android:id="@+id/item_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:textColor="#092B5A"
		android:padding="3dp"
		android:textSize="23sp"
		android:layout_below="@+id/item_image" />
	
	<TextView
		android:id="@+id/item_subtitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#09738A"
		android:padding="3dp"
		android:textSize="13sp"
		android:layout_below="@+id/item_title" />
	
	<TextView
		android:id="@+id/item_link"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#78A890"
		android:padding="3dp"
		android:textSize="13sp"
		android:layout_below="@+id/item_subtitle" />

	<EditText
        android:id="@+id/commentField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="3dip"
        android:layout_marginLeft="9dip"
        android:hint="@string/commentbutton_hint"
        android:layout_below="@+id/item_link"
        android:textColor="#092B5A" />

	<Button
        android:id="@+id/pickImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold|italic"
        android:textColor="#092B5A"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dip"
        android:layout_marginLeft="9dip"
        android:layout_marginRight="9dip"
        android:text="@string/pickimgbutton"
        android:layout_below="@+id/commentField"
        android:background="#78A890"
        android:onClick="getImage" />
      
   <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_below="@+id/pickImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="9dip"
        android:src="@drawable/background" />
   
	<Button
        android:id="@+id/go_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dip"
		android:layout_marginBottom="3dip"
		android:layout_marginLeft="3dip"
		android:layout_marginRight="3dip"
        android:textColor="#092B5A"
        android:background="#9ED1B7"
        android:layout_below="@+id/imageView1"
        android:text="@string/commentbutton" />


</RelativeLayout>